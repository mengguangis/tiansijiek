isFrontFace:

updateIsFrontFace()
{
	//call this each time when mouse moves
	for each face in face list
	{
		if(dot(facenormal, viewVector) < 0)
		{
			isFrontFace[i] = true;
		}
		else
		{
			isFrontFace[i] = false;
		}
	}
}

